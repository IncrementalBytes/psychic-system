<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:key="preference_list_team"
        android:title="Team"
        android:summary="@string/preferences_team"
        android:defaultValue="@string/none"/>
    <ListPreference
        android:key="preference_list_year"
        android:title="Season"
        android:summary="@string/preferences_year"
        android:defaultValue="@string/none"
        android:entries="@array/year_list_entries"
        android:entryValues="@array/year_list_values"/>
    <EditTextPreference
      android:defaultValue="@string/placeholder"
      android:key="preference_edit_version"
      android:singleLine="true"
      android:title="App Version"
      android:enabled="false"/>

</PreferenceScreen>