<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/fragment_match_creation"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingBottom="@dimen/activity_vertical_margin"
  android:paddingLeft="@dimen/activity_horizontal_margin"
  android:paddingRight="@dimen/activity_horizontal_margin"
  android:paddingTop="@dimen/activity_vertical_margin">

  <TableRow
    android:id="@+id/match_row_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <TextView
      android:id="@+id/match_text_header"
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/match_create_header"
      android:textSize="18sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>
  </TableRow>

  <TableRow
    android:id="@+id/match_row_date"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:gravity="center_vertical"
    app:layout_constraintTop_toBottomOf="@+id/match_row_header"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">
    <TextView
      android:id="@+id/match_text_date"
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/date_picker_title"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/match_button_date"/>
    <Button
      android:id="@+id/match_button_date"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAlignment="center"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/match_text_date"/>
  </TableRow>

  <TableRow
    android:id="@+id/match_row_home"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:gravity="center_vertical"
    app:layout_constraintTop_toBottomOf="@+id/match_row_date"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">
    <TextView
      android:id="@+id/match_text_home_team"
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingStart="0dp"
      android:paddingEnd="8dp"
      android:text="@string/home_team"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/match_spinner_home_team"/>
    <Spinner
      android:id="@+id/match_spinner_home_team"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:maxLines="1"
      android:spinnerMode="dialog"
      app:layout_constraintStart_toEndOf="@+id/match_text_home_team"
      app:layout_constraintEnd_toEndOf="parent"/>
  </TableRow>

  <TableRow
    android:id="@+id/match_row_away"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:gravity="center_vertical"
    app:layout_constraintTop_toBottomOf="@+id/match_row_home"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">
    <TextView
      android:id="@+id/match_text_away_team"
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingStart="0dp"
      android:paddingEnd="8dp"
      android:text="@string/away_team"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toStartOf="@id/match_spinner_away_team"/>
    <Spinner
      android:id="@+id/match_spinner_away_team"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:maxLines="1"
      android:spinnerMode="dialog"
      app:layout_constraintStart_toEndOf="@+id/match_text_away_team"
      app:layout_constraintEnd_toEndOf="parent"/>
  </TableRow>

  <TableRow
    android:id="@+id/match_row_buttons"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:gravity="end"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent">
    <Button
      android:id="@+id/match_button_cancel"
      style="@style/Widget.AppCompat.Button.Borderless"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/cancel"
      android:textColor="@color/colorAccent_transparent"
      app:layout_constraintEnd_toStartOf="@id/match_button_create"/>
    <Button
      android:id="@+id/match_button_create"
      style="@style/Widget.AppCompat.Button.Borderless"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/create"
      android:textColor="@color/colorAccent_transparent"
      app:layout_constraintStart_toEndOf="@+id/match_button_cancel"
      app:layout_constraintEnd_toEndOf="parent"/>
  </TableRow>

</android.support.constraint.ConstraintLayout>
