<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/fragment_match_details"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingBottom="@dimen/activity_vertical_margin"
  android:paddingLeft="@dimen/activity_horizontal_margin"
  android:paddingRight="@dimen/activity_horizontal_margin"
  android:paddingTop="@dimen/activity_vertical_margin">

  <TableRow
    android:id="@+id/details_row_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/scoring_text"
      android:text="@string/scoring"
      android:textStyle="italic"
      android:gravity="center"/>
  </TableRow>

  <TableRow
    android:id="@+id/details_row_home"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/details_row_header">
    <net.frostedbytes.android.trendo.views.TouchableTextView
      android:id="@+id/scoring_text_home_team"
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="12dp"
      android:layout_marginEnd="8dp"
      android:ems="4"/>
    <TextView
      android:id="@+id/scoring_text_home_team_score"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:ems="4"
      android:text="@string/default_score"/>
    <net.frostedbytes.android.trendo.views.TouchableImageView
      android:id="@+id/button_add_home_event"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:layout_marginBottom="8dp"
      android:layout_marginEnd="8dp"
      android:contentDescription="@string/add_event"
      app:srcCompat="@drawable/ic_add_item"/>
    <net.frostedbytes.android.trendo.views.TouchableImageView
      android:id="@+id/button_edit_home_event"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:layout_marginBottom="8dp"
      android:layout_marginEnd="8dp"
      android:contentDescription="@string/edit_event"
      app:srcCompat="@drawable/ic_remove_item"/>
  </TableRow>

  <TableRow
    android:id="@+id/details_row_away"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/details_row_home">
    <net.frostedbytes.android.trendo.views.TouchableTextView
      android:id="@+id/scoring_text_away_team"
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="12dp"
      android:layout_marginEnd="8dp"
      android:ems="4"/>
    <TextView
      android:id="@+id/scoring_text_away_team_score"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:ems="4"
      android:text="@string/default_score"/>
    <net.frostedbytes.android.trendo.views.TouchableImageView
      android:id="@+id/button_add_away_event"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:layout_marginBottom="8dp"
      android:layout_marginEnd="8dp"
      app:srcCompat="@drawable/ic_add_item"
      android:contentDescription="@string/add_event"/>
    <net.frostedbytes.android.trendo.views.TouchableImageView
      android:id="@+id/button_edit_away_event"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:layout_marginBottom="8dp"
      android:layout_marginEnd="8dp"
      app:srcCompat="@drawable/ic_remove_item"
      android:contentDescription="@string/edit_event"/>
  </TableRow>

  <TableRow
    android:id="@+id/details_row_trend"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/details_row_away">
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/trend_text_title"
      android:text="@string/trend"
      android:textStyle="italic"
      android:gravity="center"/>
    <TableLayout
      android:id="@+id/trend_table_past_matches"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:stretchColumns="*"
      android:layout_marginTop="8dp">
    </TableLayout>
    <TableLayout
      android:id="@+id/record_table_opponent"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:stretchColumns="*"
      android:layout_marginTop="8dp"
      app:layout_constraintTop_toBottomOf="@+id/trend_table_past_matches">
    </TableLayout>
  </TableRow>

  <TableRow
    android:id="@+id/details_row_buttons"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    android:gravity="end">
  <Button
    android:id="@+id/match_button_finalize"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/Widget.AppCompat.Button.Borderless"
    android:text="@string/finalize"
    android:textColor="@color/colorAccent_transparent"/>
  </TableRow>

</android.support.constraint.ConstraintLayout>
