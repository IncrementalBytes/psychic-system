<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  tools:layout_editor_absoluteY="81dp"
  tools:layout_editor_absoluteX="0dp">

  <TextView
    android:id="@+id/team_item_full_name"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:text="@string/placeholder"
    android:textColor="@android:color/black"
    android:textSize="18sp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="parent"/>
  <TextView
    android:id="@+id/team_item_short_name"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="8dp"
    android:text="@string/placeholder"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/team_item_full_name"/>
  <TextView
    android:id="@+id/team_item_conference_name"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="@string/placeholder"
    android:layout_marginStart="16dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toRightOf="@+id/team_item_short_name"
    app:layout_constraintTop_toBottomOf="@+id/team_item_full_name"/>
  <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/team_item_delete"
    app:srcCompat="@drawable/ic_delete"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="4dp"
    app:layout_constraintTop_toBottomOf="@+id/team_item_full_name"
    app:layout_constraintVertical_bias="0.0"
    android:contentDescription="@string/delete_team"/>

</android.support.constraint.ConstraintLayout>