<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/fragment_event_detail"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingTop="@dimen/activity_vertical_margin"
  android:paddingBottom="@dimen/activity_vertical_margin"
  android:paddingLeft="@dimen/activity_horizontal_margin"
  android:paddingRight="@dimen/activity_horizontal_margin">

  <TableRow
    android:id="@+id/event_row_team_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:gravity="center"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <TextView
      android:id="@+id/event_text_header_team_name"
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingStart="0dp"
      android:paddingEnd="8dp"
      android:text="@string/team_name"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="@+id/event_text_team_name"/>
    <TextView
      android:id="@+id/event_text_team_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      app:layout_constraintStart_toEndOf="@+id/event_text_team_name"
      app:layout_constraintEnd_toEndOf="parent"/>
  </TableRow>

  <TableRow
    android:id="@+id/event_row_player_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:gravity="center"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/event_row_team_name">
    <TextView
      android:id="@+id/event_text_header_player_name"
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/player_name"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="@+id/event_spinner_player_name"/>
    <Spinner
      android:id="@+id/event_spinner_player_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_margin="8dp"
      android:gravity="center_vertical"
      android:spinnerMode="dialog"
      app:layout_constraintStart_toEndOf="@+id/event_text_header_player_name"
      app:layout_constraintEnd_toEndOf="parent"/>
  </TableRow>

  <TableRow
    android:id="@+id/event_row_event_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp"
    android:gravity="center"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/event_row_player_name">
    <TextView
      android:id="@+id/event_text_header_event_name"
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/event_name"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="@+id/event_spinner_event_name"/>
    <Spinner
      android:id="@+id/event_spinner_event_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_margin="8dp"
      android:gravity="center_vertical"
      android:spinnerMode="dialog"
      app:layout_constraintStart_toEndOf="@+id/event_text_header_event_name"
      app:layout_constraintEnd_toEndOf="parent"/>
  </TableRow>

  <TableRow
    android:id="@+id/event_row_minute"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:paddingTop="8dp"
    android:gravity="center_vertical"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/event_row_event_name">
    <TextView
      android:id="@+id/event_text_header_minute"
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingStart="0dp"
      android:paddingEnd="8dp"
      android:text="@string/event_minute"
      app:layout_constraintEnd_toStartOf="@+id/picker_first_digit"
      app:layout_constraintStart_toStartOf="parent"/>
    <NumberPicker
      android:id="@+id/picker_first_digit"
      android:layout_width="wrap_content"
      android:layout_height="100dp"
      app:layout_constraintEnd_toStartOf="@+id/picker_second_digit"
      app:layout_constraintStart_toEndOf="@+id/event_text_header_minute"/>
    <NumberPicker
      android:id="@+id/picker_second_digit"
      android:layout_width="wrap_content"
      android:layout_height="100dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/picker_first_digit"/>
  </TableRow>

  <TableRow
    android:id="@+id/event_row_details"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/event_row_minute">
    <TextView
      android:id="@+id/goal_text_header_details"
      android:textStyle="bold"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/additional_details"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>
  </TableRow>
  <TableRow
    android:id="@+id/event_row_stoppage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/event_row_details">
    <CheckBox
      android:id="@+id/event_check_stoppage_time"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:text="@string/stoppage_time"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>
  </TableRow>
  <TableRow
    android:id="@+id/event_row_additional"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/event_row_stoppage">
    <CheckBox
      android:id="@+id/event_check_aet"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:text="@string/additional_extra_time"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>
  </TableRow>

  <TableRow
    android:id="@+id/event_row_buttons"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="end"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent">
    <Button
      android:id="@+id/event_button_cancel"
      style="@style/Widget.AppCompat.Button.Borderless"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/cancel"
      android:textColor="@color/colorAccent_transparent"
      app:layout_constraintEnd_toStartOf="@id/event_button_create"/>
    <Button
      android:id="@+id/event_button_create"
      style="@style/Widget.AppCompat.Button.Borderless"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/create"
      android:textColor="@color/colorAccent_transparent"
      app:layout_constraintStart_toEndOf="@+id/event_button_cancel"
      app:layout_constraintEnd_toStartOf="parent"/>
  </TableRow>

</android.support.constraint.ConstraintLayout>
