<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:background="@color/primaryDark"
    android:orientation="vertical">

  <TextView
      android:id="@+id/match_item_title"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/default_view_margin"
      android:singleLine="true"
      android:text="@string/placeholder"
      android:textColor="@android:color/white"
      android:textSize="18sp"
      android:textStyle="bold"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/match_item_date"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/default_view_margin"
      android:text="@string/placeholder"
      android:textColor="@color/primaryAccentText"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/match_item_title" />

  <TextView
      android:id="@+id/match_item_score"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/default_view_margin"
      android:layout_marginEnd="16dp"
      android:layout_marginBottom="@dimen/default_view_margin"
      android:text="@string/placeholder"
      android:textColor="@color/primaryAccentText"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/match_item_status"
      app:layout_constraintTop_toBottomOf="@+id/match_item_title" />

  <TextView
      android:id="@+id/match_item_status"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/default_view_margin"
      android:layout_marginEnd="16dp"
      android:layout_marginBottom="@dimen/default_view_margin"
      android:text="@string/placeholder"
      android:textColor="@color/primaryAccentText"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/match_item_title" />

</androidx.constraintlayout.widget.ConstraintLayout>
