<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical">

  <TextView
    android:id="@+id/match_item_title"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/text_margin"
    android:text="@string/placeholder"
    android:textColor="@android:color/black"
    android:textSize="18sp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:maxLines="1"/>
  <TextView
    android:id="@+id/match_item_date"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/text_margin"
    android:text="@string/placeholder"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/match_item_title"/>
  <TextView
    android:id="@+id/match_item_score"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="@string/placeholder"
    android:layout_margin="@dimen/text_margin"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/match_item_status"
    app:layout_constraintTop_toBottomOf="@+id/match_item_title"/>
  <TextView
    android:id="@+id/match_item_status"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="@string/placeholder"
    android:layout_margin="@dimen/text_margin"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/match_item_title"/>

</android.support.constraint.ConstraintLayout>