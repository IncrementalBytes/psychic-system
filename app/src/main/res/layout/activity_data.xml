<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <TextView
    android:id="@+id/data_text_conferences"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_view_margin"
    android:text="Conferences:"
    android:textSize="24sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toBottomOf="@id/data_image_conferences"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@id/data_image_conferences" />

  <TextView
    android:id="@+id/data_text_conferences_status"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_view_margin"
    android:text="Pending"
    android:textSize="24sp"
    android:textStyle="italic"
    app:layout_constraintBottom_toBottomOf="@id/data_image_conferences"
    app:layout_constraintStart_toEndOf="@id/data_text_conferences"
    app:layout_constraintTop_toTopOf="@id/data_image_conferences" />

  <ImageView
    android:id="@+id/data_image_conferences"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_view_margin"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/ic_failure_dark"
    android:contentDescription="Data Pending" />

  <TextView
    android:id="@+id/data_text_teams"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_view_margin"
    android:text="Teams:"
    android:textSize="24sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toBottomOf="@id/data_image_teams"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@id/data_image_teams" />

  <TextView
    android:id="@+id/data_text_teams_status"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_view_margin"
    android:text="Pending"
    android:textSize="24sp"
    android:textStyle="italic"
    app:layout_constraintBottom_toBottomOf="@id/data_image_teams"
    app:layout_constraintStart_toEndOf="@id/data_text_teams"
    app:layout_constraintTop_toTopOf="@id/data_image_teams" />

  <ImageView
    android:id="@+id/data_image_teams"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_view_margin"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/data_image_conferences"
    app:srcCompat="@drawable/ic_failure_dark"
    android:contentDescription="Data Pending" />

  <TextView
    android:id="@+id/data_text_match_summaries"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_view_margin"
    android:text="Match Summaries:"
    android:textSize="24sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toBottomOf="@id/data_image_match_summaries"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@id/data_image_match_summaries" />

  <TextView
    android:id="@+id/data_text_match_summaries_status"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_view_margin"
    android:text="Pending"
    android:textSize="24sp"
    android:textStyle="italic"
    app:layout_constraintBottom_toBottomOf="@id/data_image_match_summaries"
    app:layout_constraintStart_toEndOf="@id/data_text_match_summaries"
    app:layout_constraintTop_toTopOf="@id/data_image_match_summaries" />

  <ImageView
    android:id="@+id/data_image_match_summaries"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_view_margin"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/data_image_teams"
    app:srcCompat="@drawable/ic_failure_dark"
    android:contentDescription="Data Pending" />

  <TextView
    android:id="@+id/data_text_trends"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_view_margin"
    android:text="Trends:"
    android:textSize="24sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toBottomOf="@id/data_image_trends"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@id/data_image_trends" />

  <TextView
    android:id="@+id/data_text_trends_status"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_view_margin"
    android:text="Pending"
    android:textSize="24sp"
    android:textStyle="italic"
    app:layout_constraintBottom_toBottomOf="@id/data_image_trends"
    app:layout_constraintStart_toEndOf="@id/data_text_trends"
    app:layout_constraintTop_toTopOf="@id/data_image_trends" />

  <ImageView
    android:id="@+id/data_image_trends"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_view_margin"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/data_image_match_summaries"
    app:srcCompat="@drawable/ic_failure_dark"
    android:contentDescription="Data Pending" />

</androidx.constraintlayout.widget.ConstraintLayout>